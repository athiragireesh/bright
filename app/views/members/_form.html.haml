= simple_form_for @member, defaults: {input_html: { class: "form-control" }} do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-6
        = f.input :code
      .col-md-6
        = f.input :name
    .row
      .col-md-6
        = f.association :membership, input_html: { class: 'selectize' }
      .col-md-6
        = f.input :kind
    .row
      .col-md-6
        = f.input :gender
      .col-md-6
        = f.input :age_group
    .row
      .col-md-12
        = f.input :notes

  .form-actions
    = f.button :submit
    = link_to @member do
      %button.btn.btn-default{type: "button"} Cancel

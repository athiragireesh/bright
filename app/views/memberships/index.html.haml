%h1.page-header Memberships
.row
  .col-md-12
    %h2.sub-header Index
    .text-right
      = link_to 'New Membership', new_membership_path
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Code
            %th Name
            %th Kind
            %th
            %th
        %tbody
          - @memberships.each do |membership|
            %tr
              %td= membership.id
              %td= membership.code
              %td= membership.name
              %td= membership.kind
              %td= link_to 'Show', membership
              %td= link_to 'Edit', edit_membership_path(membership)
